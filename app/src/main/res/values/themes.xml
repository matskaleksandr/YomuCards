<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.YomuCards" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Основные цвета -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="colorPrimary">#B61E15</item> <!-- Основной цвет -->
        <item name="colorPrimaryVariant">#B61E15</item> <!-- Тёмный вариант основного цвета -->
        <item name="colorOnPrimary">@color/white</item> <!-- Цвет текста поверх основного цвета -->

        <item name="colorSecondary">@color/secondary</item> <!-- Второстепенный цвет -->
        <item name="colorSecondaryVariant">@color/secondaryDark</item> <!-- Тёмный вариант второстепенного цвета -->
        <item name="colorOnSecondary">@color/black</item> <!-- Цвет текста поверх второстепенного цвета -->

        <item name="colorOnBackground">@color/black</item> <!-- Цвет текста на фоне -->

        <item name="colorSurface">@color/white</item> <!-- Цвет карточек, диалогов и т.д. -->
        <item name="colorOnSurface">@color/black</item> <!-- Цвет текста на поверхности -->

        <item name="colorError">@color/red</item> <!-- Цвет ошибки -->
        <item name="colorOnError">@color/white</item> <!-- Цвет текста на фоне ошибки -->

        <!-- Дополнительные параметры -->
        <item name="android:statusBarColor">#B61E15</item> <!-- Цвет строки состояния -->
        <item name="android:navigationBarColor">#2C2C2C</item> <!-- Цвет нижней навигационной панели -->
    </style>
</resources>
