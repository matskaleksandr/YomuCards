<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Закруглённые углы -->
    <corners android:radius="30dp" />

    <!-- Градиентный фон -->
    <gradient
        android:angle="45"
        android:startColor="#FF2222"
        android:centerColor="#FFE7E7"
        android:endColor="#FFFFFF"

        android:centerX="0.5"
        android:type="linear" />

    <!-- Тень и отступы -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Граница -->
    <stroke
        android:width="3dp"
        android:color="#D10303" />
</shape>
