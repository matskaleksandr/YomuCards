<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".FriendsActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Топ пользователей"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="16dp"
            android:textSize="27dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/topLearnerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_top_learner" />

        <TextView
            android:id="@+id/tvUserPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:text="Ты на 0 месте"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Индикатор загрузки -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <!-- Контейнер для центрирования группы элементов -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center">

            <!-- Прогресс-бар с лого внутри -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/loadingSpinner"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:indeterminate="true"
                    android:indeterminateTint = "#000000"/>

                <ImageView
                    android:id="@+id/centerLogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_yo"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside" />

            </FrameLayout>

            <!-- Текст загрузки (опционально) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Загрузка..."
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:textSize="16sp"/>

        </LinearLayout>
    </FrameLayout>

    <ImageButton
        android:id="@+id/btnExitTopLearner"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/exit_arrow"
        android:layout_gravity="top|start"
        android:layout_margin="16dp" />

</FrameLayout>